<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.k2js.p1.league.LeagueDAO">

<select id="leagueTeamList" resultType="LeagueVO">
	select * from team order by point desc
</select>

<select id="leagueSelect" parameterType="String" resultType="LeagueVO">
	select * from team where teamName = #{teamName}
</select>

<insert id="leagueWrite" parameterType="LeagueVO">
	insert into team values(#{teamName}, #{win}, #{draw}, #{lose}, #{gender}, #{point})
</insert>



<delete id="leagueDelete" parameterType="String">
	delete team where teamName = #{teamName}
</delete>


<select id="leagueMaleList" parameterType="String" resultType="LeagueVO">
	select * from teamMale where matchName = #{name, jdbcType=VARCHAR}
</select>

</mapper>