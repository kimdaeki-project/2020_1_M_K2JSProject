<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.k2js.p1.manager.ManagerDAO">

	<resultMap type="ManagerVO" id="selectManager">
		<id column="num" property="num"/>
		<result column="name" property="name"/>
		<result column="gender" property="gender"/>
		<result column="age" property="age"/>
		<result column="phone" property="phone"/>
		<result column="home" property="home"/>
		<collection property="managerFileVOs" javaType="List" ofType="ManagerFileVO">
			<id column="fileNum" property="fileNum"/>
			<result column="fileName" property="fileName"/>
			<result column="oriName" property="oriName"/>	
		</collection>
	</resultMap>


	<insert id="addManager" parameterType="ManagerVO">
		insert into manager values(manager_seq.nextval,#{name},#{gender},#{age},#{phone},#{home},#{account})
	</insert>
	
	<select id="managerNum" resultType="Long">
		select manager_seq.nextval from dual
	</select>
	
</mapper>